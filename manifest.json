{
  "name": "怪しい日本語ジェネレーター",
  "description": "贵樣は怪レい日本语をFirefoxて生成ずゑことがてきまず！",
  "homepage_url": "https://github.com/mdn/webextensions-examples/tree/master/commands",
  "manifest_version": 2,
  "version": "1.1",

  "browser_specific_settings": {
    "gecko": {
      "id": "hashibutogarasu@github.com",
      "strict_min_version": "94.0"
    }
  },
  
  "icons": {
    "128": "logo.png"
  },
  "background": {
    "scripts": [
      "background.js",
      "./modules/cjp.js"
    ]
  },
  "sidebar_action": {
    "default_icon": "./logo.png",
    "default_title": "怪しい日本語ジェネレーター",
    "default_panel": "./sidebar/sidebar.html",
    "browser_style": true
  },
  "permissions": [
    "contextMenus",
    "menus",
    "activeTab"
  ]
}
